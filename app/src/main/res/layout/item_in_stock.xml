<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/productImg"
        android:layout_height="@dimen/product_img_height"
        android:layout_width="@dimen/product_img_width"
        android:layout_weight="4">
    </ImageView>

    <LinearLayout
        android:layout_width="@dimen/product_img_width"
        android:layout_height="@dimen/product_img_width"
        android:orientation="vertical"
        android:layout_weight="7">
        <TextView
            android:id="@+id/productNameId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_description" >
        </TextView>
        <TextView
        android:id="@+id/productPriceId"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_description" >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_height="match_parent"
        android:layout_width="@dimen/button_addToCart_width"
        android:paddingLeft="@dimen/button_margint"
        android:paddingRight="@dimen/button_margint"
        android:gravity="center"
        android:text="@string/addToCart"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_addToCart"
        android:layout_weight="1" >
    </Button>

</LinearLayout>
